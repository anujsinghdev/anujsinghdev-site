                    <span class="skill-icon">{category.icon}</span>
                    <div class="skill-card-titles">
                      <h4>{category.title}</h4>
                      <span class="skill-description">{category.description}</span>
                    </div>
                  </div>
                  <div class="skill-tags">
                    {category.skills.map(skill => (
                      <span class={`skill-tag ${skill.highlight ? `skill-tag-${category.color}` : ''}`}>
                        {skill.name}
                      </span>
                    ))}
                  </div>
                </div>
              ))}
            </section>
          </div>
