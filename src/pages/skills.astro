<style>
  .skills-header {
    margin-bottom: 48px;
  }

  .skills-stats {
    display: flex;
    gap: 32px;
    margin-top: 32px;
    flex-wrap: wrap;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    padding: 16px 24px;
    background: rgba(53, 53, 53, 0.3);
    border: 1px solid #353535;
    border-radius: 12px;
    text-align: center;
    min-width: 120px;
  }

  .stat-number {
    font-size: 28px;
    font-weight: 600;
    color: var(--android-green);
    font-family: 'IBM Plex Mono', monospace;
  }

  .stat-label {
    font-size: 12px;
    color: #a8a8a8;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 4px;
  }

  .skills-grid-enhanced {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
  }

  .skill-card {
    background: rgba(28, 28, 28, 0.8);
    border: 1px solid #353535;
    border-radius: 16px;
    padding: 24px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .skill-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--android-green), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .skill-card:hover {
    border-color: rgba(61, 220, 132, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .skill-card:hover::before {
    opacity: 1;
  }

  .skill-card-android::before {
    background: linear-gradient(90deg, var(--android-green), transparent);
  }

  .skill-card-skills::before {
    background: linear-gradient(90deg, var(--kotlin-purple), transparent);
  }

  .skill-card-blog::before {
    background: linear-gradient(90deg, #FF6719, transparent);
  }

  .skill-card-contact::before {
    background: linear-gradient(90deg, #4ECDC4, transparent);
  }

  .skill-card-multiplatform::before {
    background: linear-gradient(90deg, #E24462, transparent);
  }

  .skill-card-header {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    margin-bottom: 20px;
  }

  .skill-icon {
    font-size: 32px;
    line-height: 1;
    filter: grayscale(0);
  }

  .skill-card-titles {
    flex: 1;
  }

  .skill-card-titles h4 {
    margin: 0 0 4px 0;
    font-size: 18px;
    color: #fff;
  }

  .skill-description {
    font-size: 13px;
    color: #888;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .skill-tag {
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 13px;
    font-family: 'IBM Plex Mono', monospace;
    background: rgba(53, 53, 53, 0.5);
    color: #a8a8a8;
    border: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .skill-tag:hover {
    background: rgba(53, 53, 53, 0.8);
    color: #fff;
  }

  .skill-tag-android {
    background: rgba(61, 220, 132, 0.15);
    color: var(--android-green);
    border-color: rgba(61, 220, 132, 0.3);
  }

  .skill-tag-skills {
    background: rgba(127, 82, 255, 0.15);
    color: var(--kotlin-purple);
    border-color: rgba(127, 82, 255, 0.3);
  }

  .skill-tag-blog {
    background: rgba(255, 103, 25, 0.15);
    color: #FF6719;
    border-color: rgba(255, 103, 25, 0.3);
  }

  .skill-tag-contact {
    background: rgba(78, 205, 196, 0.15);
    color: #4ECDC4;
    border-color: rgba(78, 205, 196, 0.3);
  }

  .skill-tag-multiplatform {
    background: rgba(226, 68, 98, 0.15);
    color: #E24462;
    border-color: rgba(226, 68, 98, 0.3);
  }

  @media screen and (max-width: 767px) {
    .skills-grid-enhanced {
      grid-template-columns: 1fr;
    }

    .skills-stats {
      gap: 16px;
    }

    .stat-item {
      flex: 1;
      min-width: 80px;
      padding: 12px 16px;
    }

    .stat-number {
      font-size: 22px;
    }
  }
</style>
