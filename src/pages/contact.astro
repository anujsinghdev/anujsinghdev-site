<style>
  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 20px;
    margin-top: 24px;
  }

  .contact-card {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .contact-card::before {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .contact-card:hover {
    transform: translateY(-4px);
    border-color: rgba(255, 255, 255, 0.15);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  .contact-card:hover::before {
    opacity: 0.05;
  }

  .github-card:hover { border-color: rgba(255, 255, 255, 0.3); }
  .github-card::before { background: linear-gradient(135deg, #fff, #888); }

  .linkedin-card:hover { border-color: rgba(0, 119, 181, 0.5); }
  .linkedin-card::before { background: linear-gradient(135deg, #0077B5, #0A66C2); }

  .twitter-card:hover { border-color: rgba(255, 255, 255, 0.3); }
  .twitter-card::before { background: linear-gradient(135deg, #fff, #888); }

  .email-card:hover { border-color: rgba(234, 67, 53, 0.5); }
  .email-card::before { background: linear-gradient(135deg, #EA4335, #FBBC04); }

  .substack-card:hover { border-color: rgba(255, 103, 25, 0.5); }
  .substack-card::before { background: linear-gradient(135deg, #FF6719, #FF8C42); }

  .youtube-card:hover { border-color: rgba(255, 0, 0, 0.5); }
  .youtube-card::before { background: linear-gradient(135deg, #FF0000, #CC0000); }

  .contact-icon-wrapper {
    width: 64px;
    height: 64px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  .contact-card:hover .contact-icon-wrapper {
    transform: scale(1.05);
  }

  .github-gradient {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: #fff;
  }

  .linkedin-gradient {
    background: linear-gradient(135deg, rgba(0, 119, 181, 0.2), rgba(10, 102, 194, 0.1));
    border: 1px solid rgba(0, 119, 181, 0.3);
    color: #0077B5;
  }

  .twitter-gradient {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: #fff;
  }

  .email-gradient {
    background: linear-gradient(135deg, rgba(234, 67, 53, 0.2), rgba(251, 188, 4, 0.1));
    border: 1px solid rgba(234, 67, 53, 0.3);
    color: #EA4335;
  }

  .substack-gradient {
    background: linear-gradient(135deg, rgba(255, 103, 25, 0.2), rgba(255, 140, 66, 0.1));
    border: 1px solid rgba(255, 103, 25, 0.3);
    color: #FF6719;
  }

  .youtube-gradient {
    background: linear-gradient(135deg, rgba(255, 0, 0, 0.2), rgba(204, 0, 0, 0.1));
    border: 1px solid rgba(255, 0, 0, 0.3);
    color: #FF0000;
  }

  .contact-info {
    flex: 1;
  }

  .contact-info h3 {
    color: #fff;
    font-size: 18px;
    font-weight: 500;
    margin: 0 0 4px 0;
  }

  .contact-info p {
    color: rgba(255, 255, 255, 0.5);
    font-size: 14px;
    margin: 0;
  }

  .contact-arrow {
    color: rgba(255, 255, 255, 0.3);
    font-size: 24px;
    transition: all 0.3s ease;
  }

  .contact-card:hover .contact-arrow {
    color: rgba(255, 255, 255, 0.7);
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .contact-card {
      padding: 20px;
    }

    .contact-icon-wrapper {
      width: 56px;
      height: 56px;
    }

    .contact-icon-wrapper svg {
      width: 28px;
      height: 28px;
    }
  }
</style>
