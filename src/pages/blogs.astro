---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";

// Fetch Substack RSS feed via rss2json to bypass CORS
interface BlogPost {
  title: string;
  pubDate: string;
  link: string;
  description: string;
  thumbnail: string;
  categories: string[];
}

interface FeedResponse {
  status: string;
  feed: {
    title: string;
    description: string;
    image: string;
  };
  items: BlogPost[];
}

let blogPosts: BlogPost[] = [];
let error = "";

try {
  const response = await fetch(
    "https://api.rss2json.com/v1/api.json?rss_url=https://anujsinghdev.substack.com/feed"
  );
  const data: FeedResponse = await response.json();
  
  if (data.status === "ok") {
    blogPosts = data.items;
  } else {
    error = "Failed to load blog posts";
  }
} catch (e) {
  error = "Failed to fetch blog posts";
}

// Format date helper
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}

// Extract first paragraph from HTML description
function getExcerpt(html: string, maxLength: number = 150): string {
  // Remove HTML tags
  const text = html.replace(/<[^>]*>/g, "").replace(/&nbsp;/g, " ").trim();
  if (text.length <= maxLength) return text;
  return text.substring(0, maxLength).trim() + "...";
}
---

<!DOCTYPE html>
<html>
  <Header title="Blogs | Anuj Singh" />
  <body>
    <div class="content">
      <Sidebar selectedItem="blogs" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block">
              <img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div>
            </a>
          </div>
          <div class="content-container">
            <h1>Blog Posts</h1>
            <p class="page-subtitle">
              Insights, tutorials, and thoughts on Android development. 
              <a href="https://substack.com/@anujsinghdev" target="_blank" rel="noopener noreferrer" class="substack-link">
                Follow me on Substack →
              </a>
            </p>
            
            {error ? (
              <div class="error-message">
                <p>{error}</p>
                <a href="https://substack.com/@anujsinghdev" target="_blank" rel="noopener noreferrer" class="button w-button">
                  Visit Substack
                </a>
              </div>
            ) : (
              <section class="blogs-grid">
                {blogPosts.map((post) => (
                  <a 
                    href={post.link} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="blog-card"
                  >
                    {post.thumbnail && (
                      <div class="blog-thumbnail">
                        <img src={post.thumbnail} alt={post.title} loading="lazy" />
                      </div>
                    )}
                    <div class="blog-content">
                      <div class="blog-meta">
                        <span class="blog-date">{formatDate(post.pubDate)}</span>
                        {post.categories.length > 0 && (
                          <div class="blog-categories">
                            {post.categories.slice(0, 2).map((cat) => (
                              <span class="blog-category">{cat}</span>
                            ))}
                          </div>
                        )}
                      </div>
                      <h3 class="blog-title">{post.title}</h3>
                      <p class="blog-excerpt">{getExcerpt(post.description)}</p>
                      <span class="read-more">Read on Substack →</span>
                    </div>
                  </a>
                ))}
              </section>
            )}
            
            <div class="substack-cta">
              <a 
                href="https://substack.com/@anujsinghdev" 
                target="_blank" 
                rel="noopener noreferrer" 
                class="button w-button"
              >
                Subscribe on Substack
              </a>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </body>
</html>

<style>
  .substack-link {
    color: #FF6719;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s ease;
  }
  
  .substack-link:hover {
    opacity: 0.8;
  }
  
  .blogs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 24px;
    margin-top: 32px;
  }
  
  .blog-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  
  .blog-card:hover {
    transform: translateY(-4px);
    border-color: rgba(255, 103, 25, 0.4);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }
  
  .blog-thumbnail {
    width: 100%;
    height: 180px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
  }
  
  .blog-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .blog-card:hover .blog-thumbnail img {
    transform: scale(1.05);
  }
  
  .blog-content {
    padding: 20px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  
  .blog-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    flex-wrap: wrap;
  }
  
  .blog-date {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.5);
  }
  
  .blog-categories {
    display: flex;
    gap: 8px;
  }
  
  .blog-category {
    font-size: 11px;
    padding: 4px 8px;
    background: rgba(255, 103, 25, 0.15);
    color: #FF6719;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .blog-title {
    font-size: 18px;
    font-weight: 600;
    color: #fff;
    margin: 0 0 12px 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .blog-excerpt {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.6;
    margin: 0 0 16px 0;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .read-more {
    font-size: 14px;
    color: #FF6719;
    font-weight: 500;
    transition: opacity 0.2s ease;
  }
  
  .blog-card:hover .read-more {
    opacity: 0.8;
  }
  
  .error-message {
    text-align: center;
    padding: 48px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }
  
  .error-message p {
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 24px;
  }
  
  .substack-cta {
    margin-top: 48px;
    text-align: center;
    padding: 32px;
    background: linear-gradient(135deg, rgba(255, 103, 25, 0.1), rgba(255, 103, 25, 0.05));
    border-radius: 16px;
    border: 1px solid rgba(255, 103, 25, 0.2);
  }
  
  @media (max-width: 768px) {
    .blogs-grid {
      grid-template-columns: 1fr;
    }
    
    .blog-thumbnail {
      height: 160px;
    }
  }
</style>
