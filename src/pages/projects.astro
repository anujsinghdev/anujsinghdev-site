---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";

// ============================================
// CONFIGURE YOUR SELECTED PROJECTS HERE
// Add or remove repo names to control which projects appear
// ============================================
const selectedRepos = [
  "android-engineer-roadmap",
  "LearningAndroidDev",
  // Add more repo names here as needed:
  // "another-repo-name",
];

// Fetch repos from GitHub API
let projects: any[] = [];
let error = null;

try {
  const response = await fetch('https://api.github.com/users/anujsinghdev/repos?sort=updated&per_page=50');
  if (response.ok) {
    const allRepos = await response.json();
    // Filter to only selected repos
    projects = allRepos.filter((repo: any) => selectedRepos.includes(repo.name));
    // Sort by the order in selectedRepos
    projects.sort((a: any, b: any) => 
      selectedRepos.indexOf(a.name) - selectedRepos.indexOf(b.name)
    );
  } else {
    error = 'Failed to fetch repositories';
  }
} catch (e) {
  error = 'Error connecting to GitHub API';
}

// Helper function to format date
function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'short', 
    day: 'numeric' 
  });
}

// Language colors (matching GitHub's colors)
const languageColors: Record<string, string> = {
  'Kotlin': '#A97BFF',
  'Java': '#B07219',
  'JavaScript': '#F1E05A',
  'TypeScript': '#3178C6',
  'Python': '#3572A5',
  'Astro': '#FF5D01',
  'HTML': '#E34C26',
  'CSS': '#563D7C',
  'Swift': '#F05138',
  'Dart': '#00B4AB',
};
---

<!DOCTYPE html>
<html>
  <Header title="Open Source | Anuj Singh" />
  <body>
    <div class="content">
      <Sidebar selectedItem="projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block">
              <img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div>
            </a>
          </div>
          <div class="content-container">
            <h1>Projects & Open Source</h1>
            <p class="page-subtitle">My open source contributions and projects on GitHub.</p>
            
            {error ? (
              <div class="error-message">
                <p>⚠️ {error}</p>
                <p>Please check the GitHub API or try again later.</p>
              </div>
            ) : projects.length === 0 ? (
              <div class="empty-message">
                <p>No projects configured. Edit the <code>selectedRepos</code> array in projects.astro to add your repos.</p>
              </div>
            ) : (
              <section class="projects-grid">
                {projects.map((repo: any) => (
                  <a href={repo.html_url} target="_blank" rel="noopener noreferrer" class="project-card">
                    <div class="project-header">
                      <div class="project-icon">
                        <svg viewBox="0 0 16 16" fill="currentColor">
                          <path d="M2 2.5A2.5 2.5 0 0 1 4.5 0h8.75a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75h-2.5a.75.75 0 0 1 0-1.5h1.75v-2h-8a1 1 0 0 0-.714 1.7.75.75 0 1 1-1.072 1.05A2.495 2.495 0 0 1 2 11.5Zm10.5-1h-8a1 1 0 0 0-1 1v6.708A2.486 2.486 0 0 1 4.5 9h8ZM5 12.25a.25.25 0 0 1 .25-.25h3.5a.25.25 0 0 1 .25.25v3.25a.25.25 0 0 1-.4.2l-1.45-1.087a.249.249 0 0 0-.3 0L5.4 15.7a.25.25 0 0 1-.4-.2Z"/>
                        </svg>
                      </div>
                      <h3 class="project-name">{repo.name}</h3>
                    </div>
                    
                    <p class="project-description">
                      {repo.description || 'No description provided'}
                    </p>
                    
                    <div class="project-meta">
                      {repo.language && (
                        <div class="project-language">
                          <span class="language-dot" style={`background-color: ${languageColors[repo.language] || '#858585'}`}></span>
                          <span>{repo.language}</span>
                        </div>
                      )}
                      
                      <div class="project-stats">
                        <span class="stat">
                          <svg viewBox="0 0 16 16" fill="currentColor">
                            <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Z"/>
                          </svg>
                          {repo.stargazers_count}
                        </span>
                        <span class="stat">
                          <svg viewBox="0 0 16 16" fill="currentColor">
                            <path d="M5 5.372v.878c0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75v-.878a2.25 2.25 0 1 1 1.5 0v.878a2.25 2.25 0 0 1-2.25 2.25h-1.5v2.128a2.251 2.251 0 1 1-1.5 0V8.5h-1.5A2.25 2.25 0 0 1 3.5 6.25v-.878a2.25 2.25 0 1 1 1.5 0ZM5 3.25a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Zm6.75.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm-3 8.75a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Z"/>
                          </svg>
                          {repo.forks_count}
                        </span>
                      </div>
                    </div>
                    
                    <div class="project-updated">
                      Updated {formatDate(repo.updated_at)}
                    </div>
                    
                    <div class="view-github">
                      View on GitHub →
                    </div>
                  </a>
                ))}
              </section>
            )}
            
            <div class="github-cta">
              <a href="https://github.com/anujsinghdev" target="_blank" rel="noopener noreferrer" class="github-link">
                <svg viewBox="0 0 16 16" fill="currentColor" class="github-icon">
                  <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8Z"/>
                </svg>
                View all repositories on GitHub
              </a>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </body>
</html>

<style>
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
    margin-top: 8px;
  }

  .project-card {
    background: rgba(28, 28, 28, 0.8);
    border: 1px solid #353535;
    border-radius: 12px;
    padding: 24px;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: 16px;
    transition: all 0.3s ease;
    position: relative;
  }

  .project-card:hover {
    border-color: var(--android-green);
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(61, 220, 132, 0.15);
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .project-icon {
    width: 20px;
    height: 20px;
    color: #a8a8a8;
  }

  .project-icon svg {
    width: 100%;
    height: 100%;
  }

  .project-name {
    font-size: 18px;
    font-weight: 600;
    color: #58a6ff;
    margin: 0;
    word-break: break-word;
  }

  .project-card:hover .project-name {
    color: var(--android-green);
  }

  .project-description {
    color: #a8a8a8;
    font-size: 14px;
    line-height: 1.6;
    margin: 0;
    flex-grow: 1;
  }

  .project-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .project-language {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    color: #a8a8a8;
  }

  .language-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .project-stats {
    display: flex;
    gap: 12px;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 12px;
    color: #a8a8a8;
  }

  .stat svg {
    width: 14px;
    height: 14px;
  }

  .project-updated {
    font-size: 12px;
    color: #666;
    font-family: 'IBM Plex Mono', monospace;
  }

  .view-github {
    font-size: 13px;
    color: var(--android-green);
    font-weight: 500;
    opacity: 0;
    transform: translateX(-8px);
    transition: all 0.2s ease;
  }

  .project-card:hover .view-github {
    opacity: 1;
    transform: translateX(0);
  }

  .github-cta {
    margin-top: 48px;
    text-align: center;
  }

  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 32px;
    background: rgba(53, 53, 53, 0.3);
    border: 1px solid #353535;
    border-radius: 12px;
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    transition: all 0.2s ease;
  }

  .github-link:hover {
    border-color: var(--android-green);
    background: rgba(61, 220, 132, 0.1);
  }

  .github-icon {
    width: 24px;
    height: 24px;
  }

  .error-message,
  .empty-message {
    background: rgba(255, 100, 100, 0.1);
    border: 1px solid rgba(255, 100, 100, 0.3);
    border-radius: 12px;
    padding: 24px;
    text-align: center;
  }

  .empty-message {
    background: rgba(255, 200, 100, 0.1);
    border-color: rgba(255, 200, 100, 0.3);
  }

  .error-message p,
  .empty-message p {
    margin: 8px 0;
  }

  .empty-message code {
    background: rgba(53, 53, 53, 0.5);
    padding: 2px 8px;
    border-radius: 4px;
    font-family: 'IBM Plex Mono', monospace;
  }

  @media screen and (max-width: 767px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
