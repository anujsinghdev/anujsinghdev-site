import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";

// ============================================
// CONFIGURE YOUR YOUTUBE CHANNEL ID HERE
// To find your channel ID:
// 1. Go to https://www.youtube.com/account_advanced
// 2. Copy your "Channel ID" (starts with "UC")
// ============================================
const YOUTUBE_CHANNEL_ID = "UCj4_QzShY5VMhrn5uYsnQoQ"; // Add your channel ID here, e.g., "UCxxxxxxxxxxxxx"

// Fetch YouTube videos from RSS feed
let videos: any[] = [];
let error = null;

if (YOUTUBE_CHANNEL_ID) {
  try {
    // Use a proxy service to convert RSS to JSON (avoids CORS issues)
    const response = await fetch(
      `https://api.rss2json.com/v1/api.json?rss_url=https://www.youtube.com/feeds/videos.xml?channel_id=${YOUTUBE_CHANNEL_ID}`
    );
    
    if (response.ok) {
      const data = await response.json();
      if (data.status === 'ok' && data.items) {
        videos = data.items.slice(0, 12); // Show up to 12 videos
      } else {
        error = 'Unable to load videos. Check your channel ID.';
      }
    } else {
      error = 'Unable to fetch videos from YouTube';
    }
  } catch (e) {
    error = 'Error connecting to YouTube feed';
  }
} else {
  error = 'CHANNEL_ID_NOT_SET';
}

// Helper function to format date
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'short', 
    day: 'numeric' 
  });
}

// Get YouTube video ID from link
function getVideoId(link: string): string {
  const match = link.match(/[?&]v=([^&]+)/);
  return match ? match[1] : '';
}
