                <p>To display your YouTube videos, add your Channel ID:</p>
                <ol class="setup-steps">
                  <li>Go to <a href="https://www.youtube.com/account_advanced" target="_blank">YouTube Advanced Settings</a></li>
                  <li>Copy your <strong>Channel ID</strong> (starts with "UC")</li>
                  <li>Open <code>src/pages/videos.astro</code></li>
                  <li>Paste it in the <code>YOUTUBE_CHANNEL_ID</code> variable</li>
                </ol>
                <a href="https://www.youtube.com/@android.university" target="_blank" rel="noopener noreferrer" class="youtube-link-button">
                  <svg viewBox="0 0 24 24" fill="currentColor" class="youtube-icon">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                  Watch on YouTube
                </a>
              </div>
            ) : error ? (
              <div class="error-message">
                <p>‚ö†Ô∏è {error}</p>
                <a href="https://www.youtube.com/@android.university" target="_blank" rel="noopener noreferrer" class="youtube-link-button">
                  Watch on YouTube ‚Üí
                </a>
              </div>
            ) : (
              <section class="videos-grid">
                {videos.map((video: any) => (
                  <a href={video.link} target="_blank" rel="noopener noreferrer" class="video-card">
                    <div class="video-thumbnail">
                      <img src={video.thumbnail} alt={video.title} loading="lazy" />
                      <div class="play-overlay">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                          <path d="M8 5v14l11-7z"/>
                        </svg>
                      </div>
                    </div>
                    <div class="video-info">
                      <h3 class="video-title">{video.title}</h3>
                      <span class="video-date">{formatDate(video.pubDate)}</span>
                    </div>
                  </a>
                ))}
              </section>
            )}
            
            <div class="youtube-cta">
              <a href="https://www.youtube.com/@android.university" target="_blank" rel="noopener noreferrer" class="youtube-link">
                <svg viewBox="0 0 24 24" fill="currentColor" class="youtube-icon">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
                Subscribe on YouTube
              </a>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </body>
</html>

<style>
  .videos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    margin-top: 8px;
  }

  .video-card {
    background: rgba(28, 28, 28, 0.8);
    border: 1px solid #353535;
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .video-card:hover {
    border-color: #FF0000;
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(255, 0, 0, 0.15);
  }

  .video-thumbnail {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
    background: #1c1c1c;
  }

  .video-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .video-card:hover .video-thumbnail img {
    transform: scale(1.05);
  }

  .play-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    background: rgba(255, 0, 0, 0.9);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .video-card:hover .play-overlay {
    opacity: 1;
  }

  .play-overlay svg {
    width: 28px;
    height: 28px;
    color: #fff;
    margin-left: 4px;
  }

  .video-info {
    padding: 16px;
  }

  .video-title {
    font-size: 15px;
    font-weight: 500;
    color: #fff;
    margin: 0 0 8px 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .video-date {
    font-size: 12px;
    color: #888;
    font-family: 'IBM Plex Mono', monospace;
  }

  .youtube-cta {
    margin-top: 48px;
    text-align: center;
  }

  .youtube-link,
  .youtube-link-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 32px;
    background: rgba(255, 0, 0, 0.1);
    border: 1px solid rgba(255, 0, 0, 0.3);
    border-radius: 12px;
    color: #FF0000;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .youtube-link:hover,
  .youtube-link-button:hover {
    background: rgba(255, 0, 0, 0.2);
    border-color: #FF0000;
  }

  .youtube-icon {
    width: 24px;
    height: 24px;
  }

  .setup-message {
    background: rgba(53, 53, 53, 0.3);
    border: 1px solid #353535;
    border-radius: 16px;
    padding: 40px;
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
  }

  .setup-icon {
    font-size: 48px;
    margin-bottom: 16px;
  }

  .setup-message h3 {
    color: #fff;
    font-size: 20px;
    margin: 0 0 16px 0;
  }

  .setup-message p {
    color: #a8a8a8;
    margin-bottom: 24px;
  }

  .setup-steps {
    text-align: left;
    color: #a8a8a8;
    font-size: 14px;
    line-height: 2;
    margin-bottom: 24px;
    padding-left: 20px;
  }

  .setup-steps a {
    color: var(--android-green);
  }

  .setup-steps code {
    background: rgba(53, 53, 53, 0.5);
    padding: 2px 8px;
    border-radius: 4px;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 13px;
  }

  .error-message {
    background: rgba(255, 100, 100, 0.1);
    border: 1px solid rgba(255, 100, 100, 0.3);
    border-radius: 12px;
    padding: 32px;
    text-align: center;
  }

  .error-message p {
    margin: 0 0 16px 0;
  }

  @media screen and (max-width: 767px) {
    .videos-grid {
      grid-template-columns: 1fr;
    }

    .setup-message {
      padding: 24px;
    }
  }
</style>
